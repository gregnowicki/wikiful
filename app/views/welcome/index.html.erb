<div class="jumbotron">
    <h1>Welcome to Wikiful</h1>
    <p class="lead">Welcome to Wikiful. Here are the most recent articles:</p>
</div>



    <div id="masonry-container" class="transitions-enabled centered infinite-scroll clearfix">
  <% @recent_articles.each do |article| %>

    <div class="box col2">
 	  <h2>
 	  	<%= link_to article.title, article %>
 	  </h2>
 	  <div class="article-info">
 		Published <%= article.created_at.strftime('%b %d, %Y') %> |
 		Filed under <%= article.categories.map { |category| link_to category.name, category_path(category.id)}.join(', ').html_safe %> 
 	  </div>
 	  <div class="content">
 	  	<%= truncate(article.content, :length => 400) %><br />
 	  	<%= link_to "Read more", article %>
 	  </div>
        </div>

 	<% end %>
  </div>
